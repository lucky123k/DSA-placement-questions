class Solution {
    public int countBinarySubstrings(String s) {
        int curr=1;int temp=0;int res=0;
        for(int i=1;i<s.length();i++){
            if(s.charAt(i)==s.charAt(i-1)){
                curr++;
            }else{
                res+=Math.min(temp,curr);
                temp=curr;
                curr=1;
            }
        }
        return res+Math.min(temp,curr);
    }
}
